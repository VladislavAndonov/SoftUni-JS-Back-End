<section class="form-container">
    <h2>Edit Product</h2>
    <form action="/product/{{product._id}}/edit" method="POST">
        <label for="name">Product Name:</label>
        <input type="text" id="name" name="name" value="{{product.name}}" required>

        <label for="skin">Skin Type:</label>
        <textarea id="skin" name="skin" required>{{product.skin}}</textarea>

        <label for="description">Product Description:</label>
        <textarea id="description" name="description" required>{{product.description}}</textarea>

        <label for="ingredients">Key Ingredients:</label>
        <textarea id="ingredients" name="ingredients" required>{{product.ingredients}}</textarea>

        <label for="benefits">Benefits:</label>
        <textarea id="benefits" name="benefits" required>{{product.benefits}}</textarea>

        <label for="price">Price:</label>
        <input type="number" id="price" name="price" value="{{product.price}}" required>

        <label for="image">Image URL:</label>
        <input type="url" id="image" name="image" value="{{product.image}}" required>

        <button type="submit">Save Changes</button>
    </form>
</section>
