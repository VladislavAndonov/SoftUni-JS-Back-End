<html lang="en">

    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{{title}}</title>
        <link rel="stylesheet" href="/static/css/styles.css" />
    </head>

    <body>
        <header class="header">
            <nav>
                <ul>
                    <li><a href="/">Home</a></li>
                    <li><a href="/product/catalog">Products</a></li>
                    <li><a href="/product/search">Search</a></li>

                    {{#if isAuthenticated}}
                        <li><a href="/product/create">Add Product</a></li>
                        <li><a href="/auth/logout">Logout</a></li>
                    {{else}}
                        <li><a href="/auth/login">Login</a></li>
                        <li><a href="/auth/register">Register</a></li>
                    {{/if}}
                </ul>
            </nav>
        </header>

        <main>
            {{#if error}}
                <div>
                    <div class="error-container">
                        <p>{{error}}</p>
                    </div>
                </div>
            {{/if}}

            {{{body}}}
        </main>

        <footer>
            <p>&copy; 2024 GlowAlchemy. All rights reserved.</p>
        </footer>

    </body>

</html>